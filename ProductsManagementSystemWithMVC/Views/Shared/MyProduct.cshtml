@model ProductsManagementSystemWithMVC.Models.Product


<div class="card">
    <img class="card-img-top" src="data:image;base64,@Model.Photo" alt="Card image cap" />
    <div class="card-body">
        <h5 class="card-title"> @Model.ProductName</h5>
        <p class="card-text">@Model.Price</p>
        <p class="card-text"><small class="text-muted">@((Model.Brand!=null)? Model.Brand.BrandName:       "NA")</small></p>
        <p class="card-text"><small class="text-muted">@((Model.Category!=null)? Model.Category.CategoryName:"NA")</small></p>
    </div>
</div>