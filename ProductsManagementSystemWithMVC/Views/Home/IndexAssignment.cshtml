<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/Contact">Contact</a>
            </li>
        </ul>

    </nav>

    @{ 


        List<int> denominations = new List<int>() { 1000, 500,100,50,10,5,1 };
        int[] numberOfBills = new int[7];
        int[] values = new int[7]; ;

        int currentNumber = ViewBag.Number;//60431

        for (int i=0; i<7;i++)
        {
            numberOfBills[i] = Convert.ToInt32(currentNumber / denominations[i]); ;//60; second time it is 341 / 500 = 0
          
            currentNumber = currentNumber - numberOfBills[i] * denominations[i];//60341 - 60 * 1000 = 341; second time its 341 -0*500=341
            values[i] = numberOfBills[i] * denominations[i];
            
        }

    }
    <div class="container-fluid">
        <h1>Currency Denominations</h1>
        <table class="table">
            <tr>
                <td>Denomination</td>
                <td>Count</td>
                <td>Amount</td>
            </tr>
            @{
                for(int j=0; j < 7; j++)
                {
                        <tr>
                            <td>@denominations[j]</td>
                            <td>@numberOfBills[j]</td>
                            <td>@values[j]</td>
                        </tr>
                }
                

            }
            
        </table>
    </div>
</body>
</html>
