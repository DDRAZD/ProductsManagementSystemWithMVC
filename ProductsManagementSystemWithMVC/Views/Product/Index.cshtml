@model List<ProductsManagementSystemWithMVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<a href="@Url.Action("Create","Product")">Create Product</a>

<table class="table">

    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Date of Purchase</th>
            <th>Availability</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Active</th>
            <th>Details link</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.Price.Value.ToString("C")</td>
            <td>@product.DateOfPurchase.Value.ToString("d/M/yy")</td>
            <td>@product.AvailabilityStatus</td>
            <td>@product.Category.CategoryName</td>
            <td>@product.Brand.BrandName</td>
            <td>@product.Active</td>
            <td><a href="@Url.Action("Details","Product", new {id=@product.ProductID})">Product Details</a></td>
            <td><a href="@Url.Action("Edit","Product", new {id=@product.ProductID})">Edit Product</a></td>
        </tr>
            
        }


    </tbody>
</table>

