<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="#">Admin</a>"
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/admin/home/index">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/products/index">Products</a></li>            
            <li class="nav-item"><a class="nav-link" href="/admin/Categories/Index">Categories</a></li>
            <li class="nav-item"> <a class="nav-link" href="/admin/Brands/Index">Brands</a></li>
            
            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item"> <a class="nav-link" href="/Account/Logout">Logout</a> </li>
              

            }
            else
            {
                <li class="nav-item"> <a class="nav-link" href="/Account/Register">Register</a> </li>
            }

        </ul>
        <!--adding a search box-->
        <form class="form-inline" action="~/product/index">
            @Html.Label("Search", new { @class = "mr-1" })
            @Html.TextBox("Search", ViewBag.search as string, new { @class = "form-control mr-1", placeholder = "Search" })


            <button type="submit" class="btn btn-primary">Go</button>
        </form>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div>
                Welcome @User.Identity.Name
            </div>

        }
    </nav>



    <!--adding a side bar-->

    <div class="row">
        <div class="col-2 bg-primary" text-white" style="min-height:1050px; padding:0px">
            <div class="list-group">
                <a href="#" class="list-group-item text-white" style="background-color:transparent">Dummy text 1</a>
                <a href="#" class="list-group-item text-white" style="background-color:transparent">Dummy text 2</a>
                <a href="#" class="list-group-item text-white" style="background-color:transparent">Dummy text 3</a>
                @RenderSection("SideBarOptions", required: false);
            </div>


        </div>


        <div class="col-10" style="min-height:610px; padding:20px">
            <div class="container-fluid" style="padding: 0px">
                @RenderBody()
            </div>

        </div>

    </div>

</body>
</html>
